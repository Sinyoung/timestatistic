<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="maximsblog.blogspot.com.timestatistic"
    android:versionCode="25"
    android:versionName="1.0.21" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="app"
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="maximsblog.blogspot.com.timestatistic.MainActivity"
            android:launchMode="singleTask"
            android:multiprocess="false" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="RecordsDbHelper"
            android:authorities="maximsblogspot.com.timestatistic.providers.db" >
        </provider>

        <receiver android:name="AlarmManagerBroadcastReceiver" >
        </receiver>

        <activity android:name="SettingsActivity" >
        </activity>
        <activity android:name="FileDialog"></activity>
        <activity android:name="HelpActivity"></activity>
        <activity android:name="TopicActivity"></activity>
    </application>

</manifest>